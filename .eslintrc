{
  "env": {
    "es6": true,
    "node": true,
  },
   "extends": [
    "eslint:recommended",
    "airbnb",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-undefined": 2,
    "no-undef": 0,
    "no-unexpected-multiline": 0,
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
